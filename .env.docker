# Fronius Device Configuration
FRONIUS_HOST=fronius-inverter.local
FRONIUS_PORT=80
FRONIUS_PROTOCOL=http
FRONIUS_TIMEOUT=10000
FRONIUS_DEVICE_ID=1
FRONIUS_RETRIES=3
FRONIUS_RETRY_DELAY=1000

# MCP Server Configuration (Docker uses stdio mode)
MCP_PORT=3000
LOG_LEVEL=info

# Examples for different setups:

# Local Fronius with hostname (most common)
# FRONIUS_HOST=fronius-inverter.local

# Fronius with IP address
# FRONIUS_HOST=192.168.1.100

# HTTPS setup (newer Fronius models)
# FRONIUS_HOST=192.168.1.100
# FRONIUS_PROTOCOL=https
# FRONIUS_PORT=443

# For debugging
# LOG_LEVEL=debug